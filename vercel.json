{
  "crons": [
    {
      "path": "/api/cron/fetch-rss",
      "schedule": "0 18 * * *"
    },
    {
      "path": "/api/cron/process-rss",
      "schedule": "15 18 * * *"
    },
    {
      "path": "/api/cron/translate-jobs",
      "schedule": "30 18 * * *"
    },
    {
      "path": "/api/cron/enrich-companies",
      "schedule": "45 18 * * *"
    },
    {
      "path": "/api/cron/crawl-trusted-jobs",
      "schedule": "0 19 * * *"
    }
  ],
  "rewrites": [
    {
      "source": "/api/cron/:task",
      "destination": "/api/cron/index?task=:task"
    },
    {
      "source": "/api/translate-jobs",
      "destination": "/api/cron/index?task=translate-jobs"
    },
    {
      "source": "/api/:match*",
      "destination": "/api/:match*"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
