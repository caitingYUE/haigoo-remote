# 阿里百炼 API 配置
VITE_ALIBABA_BAILIAN_API_KEY=your_api_key_here
VITE_ALIBABA_BAILIAN_BASE_URL=https://dashscope.aliyuncs.com/api/v1

# 应用配置
VITE_APP_NAME=Haigoo Assistant
VITE_APP_VERSION=1.0.0

# 开发环境配置
NODE_ENV=development

# Vercel部署配置
VITE_API_BASE_URL=https://your-app-name.vercel.app
VITE_RSS_PROXY_URL=https://your-app-name.vercel.app/api/rss-proxy
# 开源解析服务地址（Apache Tika Server 或其他）
# 例如： https://your-tika-host.example.com:9998
TIKA_URL=https://your-tika-host.example.com:9998

# 解析引擎配置
# 是否启用服务端 OCR（tesseract.js）。在 Vercel 上建议关闭以避免超时，
# 如需识别图片简历，在本地开发或自托管环境设置为 true 并准备语言模型。
ENABLE_OCR=false

# RSS配置
VITE_RSS_FETCH_TIMEOUT=10000
VITE_RSS_RETRY_ATTEMPTS=3

# Vercel KV 存储配置（生产环境）
# 这些变量会在 Vercel 部署时自动设置，无需手动配置
# KV_REST_API_URL=your_kv_rest_api_url
# KV_REST_API_TOKEN=your_kv_rest_api_token
# KV_REST_API_READ_ONLY_TOKEN=your_kv_read_only_token

# Redis 存储配置
# 本地开发环境
# REDIS_URL=redis://localhost:6379
# 
# Vercel Redis 配置（生产环境）
# 连接项目后，Vercel 会自动设置以下环境变量：
# REDIS_URL=rediss://default:your_password@your_redis_host:port
# 
# 自定义 Redis 服务器
# REDIS_URL=redis://username:password@hostname:port
# REDIS_URL=rediss://username:password@hostname:port  # 使用 SSL

# 存储配置
VITE_STORAGE_PROVIDER=auto  # auto | vercel-kv | redis | localStorage
VITE_STORAGE_MAX_JOBS=1000
VITE_STORAGE_MAX_DAYS=7

# 后端保留窗口（天）用于 /api/data/processed-jobs 写入阶段
# 若未设置，默认 30 天；设置为更大值可保留更多历史数据
PROCESSED_JOBS_RETAIN_DAYS=30